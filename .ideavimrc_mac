Plug 'tpope/vim-surround'
Plug 'easymotion/vim-easymotion'
Plug 'preservim/nerdtree'
Plug 'vim-scripts/argtextobj.vim'
Plug 'chrisbra/matchit'
Plug 'tommcdo/vim-exchange'
Plug 'vim-scripts/ReplaceWithRegister'
Plug 'machakann/vim-highlightedyank'

syntax enable
let mapleader = " "
set scrolloff=5
set incsearch
set relativenumber
set tabstp=4
set belloff=all
set visualbell
set noerrorbells
set showmode

"----------------Mapping-----------------"
map H b
map L e
map J 3j
map K 3k
map <leader>da d2f"
map <c-l> <c-w>l
map <c-h> <c-w>h
map <c-j> <c-w>j
map <c-k> <c-w>k

map <leader>vp "0p

vmap <leader>ya "ay
vmap <leader>ys "sy
vmap <leader>yd "dy

map <leader>pa "ap
map <leader>ps "sp
map <leader>pd "dp

"------------- EasyMotion Map ------------------"
map <Leader>j <Plug>(easymotion-s)

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action
map <BS> <Action>(EditorBackSpace)

map <C-m>0 <Action>(ToggleBookmark0)
map <C-m>1 <Action>(ToggleBookmark1)
map <C-m>2 <Action>(ToggleBookmark2)
map <C-m>3 <Action>(ToggleBookmark3)
map <C-m>4 <Action>(ToggleBookmark4)
map <C-m>5 <Action>(ToggleBookmark5)
map <C-m>6 <Action>(ToggleBookmark6)
map <C-m>7 <Action>(ToggleBookmark7)
map <C-m>8 <Action>(ToggleBookmark8)
map <C-m>9 <Action>(ToggleBookmark9)

map <C-0> <Action>(GotoBookmark0)
map <C-1> <Action>(GotoBookmark1)
map <C-2> <Action>(GotoBookmark2)
map <C-3> <Action>(GotoBookmark3)
map <C-4> <Action>(GotoBookmark4)
map <C-5> <Action>(GotoBookmark5)
map <C-6> <Action>(GotoBookmark6)
map <C-7> <Action>(GotoBookmark7)
map <C-8> <Action>(GotoBookmark8)
map <C-9> <Action>(GotoBookmark9)
map <C-b>d <Action>(ToggleBookmark)
map <C-b>n <Action>(GotoNextBookmark)
map <C-b>p <Action>(GotoPreviousBookmark)

map <C-j> <Action>(EditorCloneCaretBelow)
map <C-k> <Action>(EditorCloneCaretAbove)

map <C-q> <Action>(QuickJavaDoc)

map <C-e> <Action>(ShowErrorDescription)

map <C-f> <Action>(SelectInProjectView)

"Navigate breadcrumb tab"
map <A-h> <Action>(PreviousTab)

"Navigate breadcrumb tab"
map <A-l> <Action>(NextTab)

map <A-j> <Action>(MethodDown)

map <A-k> <Action>(MethodUp)

map <Leader>th <Action>(com.mikejhill.intellij.movetab.actions.MoveTabLeft)
map <Leader>tl <Action>(com.mikejhill.intellij.movetab.actions.MoveTabRight)

map <Leader>i <Action>(ShowIntentionActions)

map <Leader>rt <Action>(RunClass)
map <Leader>re <Action>(Rerun)

map <Leader>dt <Action>(Unwrap)

map <Leader>t <Action>(Refactorings.QuickListPopupAction)

map <Leader>w <Action>(EditorSelectWord)
map <Leader>e <Action>(EditorUnSelectWord)

map <leader>o <Action>(OverrideMethods)

map <leader><tab> <Action>(Switcher)

map <leader>q <Action>(CloseAllEditors)

map <leader>st <Action>(SurroundWith)

map <leader>vsp <Action>(SplitVertically)

map <leader>sp <Action>(SplitHorizontally)

map <leader>msp <Action>(MaximizeEditorInSplit)

map <leader>usp <Action>(Unsplit)

map <leader>1 <Action>(GoToTab1)

map <leader>2 <Action>(GoToTab2)

map <leader>3 <Action>(GoToTab3)

map <leader>4 <Action>(GoToTab4)

map <leader>5 <Action>(GoToTab5)

map <leader>6 <Action>(GoToTab6)

map <leader>7 <Action>(GoToTab7)

map <leader>8 <Action>(GoToTab8)

map <leader>9 <Action>(GoToTab9)

map <leader>c <Action>(SilentCodeCleanup)

