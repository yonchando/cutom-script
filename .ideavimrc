syntax enable

colorscheme desert

set backspace=indent,eol,start
set number
set linespace=15
:let mapleader = ","

"----------------Mapping-----------------"

" Normale Map
:nmap <C-h> ^
:nmap <C-l> $
:nmap H b
:nmap L w
:nmap <Leader>( vi(
:nmap <Leader>' vi'
:nmap <Leader>" vi"


:nnoremap <C-,> i<CR><Esc>
:nnoremap <C-.> i<BS><Esc>

" Vistual Map
:vmap <C-l> $
:vmap <C-h> ^
:vmap L w
:vmap H b
