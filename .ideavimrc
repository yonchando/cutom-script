syntax enable

colorscheme desert

:set backspace=indent,eol,start
:set number
:set linespace=15
:let mapleader = ","
:set relativenumber

"----------------Mapping-----------------"

" Normale Map
:nmap <C-h> ^
:nmap <C-l> $
:nmap H b
:nmap L e


:nnoremap <C-,> i<CR><Esc>
:nnoremap <C-.> i<BS><Esc>

" Vistual Map
:vmap <C-l> $
:vmap <C-h> ^
:vmap L e
:vmap H b
